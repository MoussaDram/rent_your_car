<div class="container py-5">
  <div class="row">
    <div class="col-12 ">
      <div class="bg-white rounded p-3 shadow">
        <h3><%= @car.brand %></h3>
        <p><%= @car.model %></p>
        <p><%= @car.year %></p>
        <p><%= @car.address %></p>
        <p><%= @car.price %></p>
        <% if policy(@car).edit? %>
          <%= link_to "Modifier", edit_car_path(@car) %>
        <% end %>
        <br>
        <% if policy(@car).destroy? %>
          <%= link_to "Delete", car_path(@car), method: :delete, data: { confirm: "Are you sure?"} %>
        <% end %>
        <br>
        <%= link_to "Back to list", cars_path %>
      </div>
    </div>
  </div>
</div>
